<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd
        http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.2.xsd">

    <changeSet id="20220424-1" author="Arthur">
        <createTable tableName="role">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_role"/>
            </column>
            <column name="role_type" type="varchar(50)"/>
        </createTable>
    </changeSet>
    <changeSet id="20220424-2" author="Arthur">
        <createTable tableName="account">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_account"/>
            </column>
            <column name="email" type="varchar(50)"/>
            <column name="first_name" type="varchar(50)"/>
            <column name="last_name" type="varchar(50)"/>
            <column name="password" type="varchar(50)"/>
            <column name="role_id" type="bigint" remarks="Foreign key to role">
                <constraints foreignKeyName="fk_role_id" references="role(id)"/>
            </column>
            <column name="modified_date" type="datetime" autoIncrement="false"/>
            <column name="created_date" type="datetime" autoIncrement="false"/>
        </createTable>
    </changeSet>
    <changeSet id="20220424-3" author="Arthur">
        <insert tableName="role">
            <column name="role_type" value="ADMIN"/>
        </insert>
        <insert tableName="role">
            <column name="role_type" value="USER"/>
        </insert>
    </changeSet>
    <changeSet id="20220424-4" author="Arthur">
        <createTable tableName="word">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_word"/>
            </column>
            <column name="word" type="varchar(250)"/>
            <column name="transcription" type="varchar(250)"/>
            <column name="translate" type="varchar(250)"/>
            <column name="translate_type" type="varchar(250)"/>
            <column name="modified_date" type="datetime" autoIncrement="false"/>
            <column name="created_date" type="datetime" autoIncrement="false"/>
        </createTable>
    </changeSet>
    <changeSet id="20220424-5" author="Arthur">
        <createTable tableName="learning_list">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_learning_list"/>
            </column>
            <column name="account_id" type="bigint">
                <constraints foreignKeyName="fk_account_id" references="account(id)"/>
            </column>
            <column name="counter" type="int"/>
            <column name="translateType" type="varchar(250)"/>
        </createTable>
    </changeSet>
    <changeSet id="20220424-6" author="Arthur">
        <createTable tableName="learning_info">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_learning_info"/>
            </column>
            <column name="learning_list_id" type="bigint">
                <constraints foreignKeyName="fk_learning_list_id" references="learning_list(id)"/>
            </column>
            <column name="word_id" type="bigint">
                <constraints foreignKeyName="fk_word_id" references="word(id)"/>
            </column>
            <column name="counter" type="int"/>
        </createTable>
    </changeSet>
    <changeSet id="20220424-7" author="Arthur">
        <createTable tableName="word_rating">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_word_rating"/>
            </column>
            <column name="account_id" type="bigint">
                <constraints foreignKeyName="fk_account_id" references="account(id)"/>
            </column>
            <column name="word_id" type="bigint">
                <constraints foreignKeyName="fk_word_id" references="word(id)"/>
            </column>
            <column name="rating" type="int"/>
        </createTable>
    </changeSet>

</databaseChangeLog>